<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<div class="pagination"><%= will_paginate models %></div>

    <table class="table table-striped">
		<tr>
			<th><%#= t('Batch#')%></th>
			<th><%= t('Enter Date') %></th>
			<th><%= t('Batch Status') %></th>
			<th><%= t('On Time') %></th>	
			<th><%= t('Qty') %></th>
			<th><%= t('Brief Note') %></th>	
			<th><%= t('Last Updated By') %></th>
			<th></th>
			
		</tr>
		<% models.each do |r| %>
		  <tr>
		  	
		  	<td><%#= prt(r, :batch_id) %></td>
		  	<td><%= r.created_at.strftime("%Y/%m/%d::%I%P") %></td>
			<td><%= prt(r, 'batch_status.name') %></td>
			<td><%= prt(r, 'ontime_indicator') %></td>
			<td><%= prt(r, :qty) %></td>
			<td><%= prt(r, :brief_note) %></td>
			<td><%= prt(r, 'last_updated_by.name') %></td>    
			<td><%= link_to t('Edit'), edit_step_qty_path(r, :format => :js), :remote => true, :class => BUTTONS_CLS['action']  if has_action_right?('update', params[:controller], r) %></td>
			
		  </tr>
		<% end %>
	</table>
	
	<table class="table table-striped">
	  <tr>
	    <th>
	    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	    	<%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'], :id => 'close'  %>
	    	<%= link_to t('Next Step'), new_step_qty_path(:batch_id => @batch.id, :format => :js), :remote => true, :id => 'new_log_link',
	    	                            :class => BUTTONS_CLS['action']  if @batch && has_action_right?('create', params[:controller], @batch) %>
	    </th>
	  </tr>
	</table>

<% end %>	

