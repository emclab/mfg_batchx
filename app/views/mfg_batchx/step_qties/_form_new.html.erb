<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @step_qty do |f| %>    

  <%= f.input :batch_id, :as => :hidden, :input_html => {:value => @batch.id} %> 
  <%= f.input :qty, :label => t("Qty") %>
  <%= f.input :batch_status_id, :label => t("Batch Status"), :collection => Commonx::CommonxHelper.return_misc_definitions('mfg_batch_status'), :include_blank => true, :label_method => :name, :value_method => :id %>
  <%= f.input :ontime_indicator, :label => t('On Time'), :collection => [[t('Green - on time'),'green'], [t('Yellow - little hehind'), 'yellow'], [t('Red - late'), 'red']] %>
  <%= f.input :brief_note, :label => t("Brief Note"), :input_html => {:rows => 1} %> 
  
  <%= link_to t('Back'), step_qties_path(batch_id: @batch.id), :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>

<% end %>
