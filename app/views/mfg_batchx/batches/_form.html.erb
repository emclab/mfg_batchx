<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @batch do |f| %>    

  <%= f.input :order_id_noupdate, :label => t("Order#"), :readonly => true, :input_html => {:value => @order.id} %> 
  <%= f.input :customer_name, :label => t('Customer'), :readonly => true, :input_html => {:value => @rfq.customer.name} %>
  <%= f.input :product_info, :label => t("Product Info"), :readonly => true, :input_html => {:value => @rfq.product_name + ' ' + @order.drawing_num}  %> 
  <%= f.input :qty, :label => t("Qty"), :readonly => readonly?(@batch, 'qty') %>
  <%= f.input :batch_num, :label => t('Batch#'), :readonly => readonly?(@batch, 'batch_num') %>
  <%= f.input :start_date, :label => t("Start Date"), :as => :string, :readonly => readonly?(@batch, 'start_date') %> 
  <%= f.input :finish_date, :label => t("Finish Date"), :as => :string, :readonly => readonly?(@batch, 'finish_date') %> 
  <%= f.input :qty_produced, :label => t("Qty Produced"), :readonly => readonly?(@batch, 'qty_produced') %>
  <% if readonly?(@batch, 'void')%>
     <%= f.input :void_noupdate, :label => t('Void'), :readonly => true, :required => false, :input_html => {:value => @batch.expedite} %>
  <% else %>
     <%= f.input :void, :label => t('Void'), :as => :boolean %>
  <% end %>
  <% if readonly?(@batch, 'completed')%>
     <%= f.input :completed_noupdate, :label => t('Completed'), :readonly => true, :required => false, :input_html => {:value => @batch.completed} %>
  <% else %>
     <%= f.input :completed, :label => t('Completed'), :as => :boolean %>
  <% end %>

  <%= f.input :brief_note, :label => t("Brief Note"), :input_html => {:rows => 4}, :readonly => readonly?(@batch, 'brief_note') %> 
    
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save') %> 
<% end %>
   

<% end %>


